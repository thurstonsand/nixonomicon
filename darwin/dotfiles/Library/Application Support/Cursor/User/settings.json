{
    "editor.fontFamily": "Mononoki Nerd Font, monospace",
    "editor.fontSize": 13,
    "editor.wordWrap": "on",
    "workbench.editor.wrapTabs": true,
    "editor.minimap.enabled": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "workbench.commandPalette.experimental.suggestCommands": true,
    "workbench.experimental.cloudChanges.autoStore": "onShutdown",
    "workbench.experimental.cloudChanges.partialMatches.enabled": true,
    "workbench.experimental.share.enabled": true,
    "workbench.list.smoothScrolling": true,
    "git.allowForcePush": true,
    "git.autofetch": "all",
    "git.autoStash": true,
    "git.branchProtection": [
        "main"
    ],
    "git.branchProtectionPrompt": "alwaysCommit",
    "git.confirmForcePush": false,
    "git.defaultCloneDirectory": "/Users/thurstonsand/Develop",
    "git.terminalAuthentication": false,
    "git.terminalGitEditor": true,
    "github.gitProtocol": "ssh",
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "git.confirmSync": false,
    "explorer.confirmDelete": false,
    "workbench.colorTheme": "Monokai",
    "files.autoSave": "onFocusChange",
    "gitlens.mode.active": "zen",
    "editor.accessibilitySupport": "off",
    "security.workspace.trust.untrustedFiles": "open",
    "remote.autoForwardPortsSource": "hybrid",
    "explorer.confirmDragAndDrop": false,
    "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
    "diffEditor.codeLens": true,
    // Cursor
    "cursor.cmdk.useThemedDiffBackground": true,
    "cursor.composer.cmdPFilePicker2": true,
    "cursor.diffs.useCharacterLevelDiffs": true,
    "cursor.general.enableShadowWorkspace": true,
    "cursor.general.gitGraphIndexing": "enabled",
    "window.newWindowProfile": "Default",
    "window.commandCenter": true,
    "cursor.composer.shouldChimeAfterChatFinishes": true,
    // Python
    "[python]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit",
            "source.fixAll": "explicit"
        }
    },
    // Nix
    "nix.formatterPath": [
        "nix",
        "fmt",
    ],
    "nix.enableLanguageServer": true,
    "nix.serverPath": "nil",
    "nix.serverSettings": {
        "nil": {
            "formatting": {
                "command": [
                    "nix",
                    "fmt",
                    "--",
                    "--"
                ]
            }
        },
    },
    // csv
    "rainbow_csv.highlight_rows": true,
    "rainbow_csv.virtual_alignment_mode": "always",
    "rainbow_csv.csv_lint_detect_trailing_spaces": true,
    "rainbow_csv.rbql_with_headers_by_default": true,
    "[csv]": {
        "editor.inlayHints.maximumLength": 0
    },
}